<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="13dp"
    android:background="@android:color/black">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
	        android:text="Terraforming Mars Helper App"
	        android:textSize="20sp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:minWidth="25px"
	        android:minHeight="25px"
			android:layout_centerHorizontal="true"

	        android:id="@+id/AboutTitleTextView" 
	        android:textColor="@android:color/white"
	        android:layout_marginTop="17dp"/>
    <TextView
        android:text="@string/version"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AboutTitleTextView"
        android:id="@+id/versionTextView"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:text="About the app:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
		android:layout_below="@+id/versionTextView"
        android:id="@+id/AboutAppTitleTextView"
        android:textColor="@android:color/white"/>
    <TextView
        android:text="@string/aboutApp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/AboutAppTitleTextView"
        android:id="@+id/AboutAppContentTextView"
        android:textColor="@android:color/white"/>
    <TextView
        android:text="Making of:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_below="@+id/AboutAppContentTextView"
        android:id="@+id/AboutMakingLabelTextView" 
        android:textColor="@android:color/white"/>
	<TextView
		android:text="@string/aboutMaking"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/AboutMakingLabelTextView"
		android:id="@+id/AboutMakingTextView"
		android:textColor="@android:color/white"/>
    <TextView
        
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AboutMakingTextView"
        android:id="@+id/AboutGithubLink"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
	<TextView
		android:text="Privacy:"
		android:layout_marginTop="10dp"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/AboutGithubLink"
		android:id="@+id/AboutPrivacyLabel"
		android:textColor="@android:color/white"/>
	<TextView
		android:text="@string/privacy"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/AboutPrivacyLabel"
		android:id="@+id/AboutPrivacyText"
		android:textColor="@android:color/white"
		android:layout_centerHorizontal="true"/>
    <Button
        android:text="Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/closeButton" 
        android:background="@drawable/roundedButton"
        android:layout_below="@+id/AboutPrivacyText"
		android:layout_marginTop="30dp"
		android:layout_centerHorizontal="true"/>

			<TextView
				android:text="Version notes:"
				android:layout_marginTop="20dp"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/closeButton"
				android:id="@+id/AboutVersionNotesLabel"
				android:textColor="@android:color/white"/>
			<TextView
				android:text="@string/version_notes"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/AboutVersionNotesLabel"
				android:id="@+id/AboutVersionNotesText"
				android:textColor="@android:color/white"
				android:layout_centerHorizontal="true"/>
            
        </RelativeLayout>
    </ScrollView>
    
</RelativeLayout>
